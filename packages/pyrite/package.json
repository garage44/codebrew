{
  "name": "@garage44/pyrite",
  "description": "Pyrite - Video conferencing powered by Gal\u00e8ne SFU",
  "version": "2.0.0",
  "author": "Garage44",
  "main": "service.ts",
  "bin": {
    "pyrite": "./service.ts"
  },
  "dependencies": {
    "@garage44/bunchy": "workspace:^",
    "@garage44/common": "workspace:^",
    "@garage44/expressio": "workspace:^",
    "@preact/signals": "catalog:",
    "classnames": "catalog:",
    "deepsignal": "catalog:",
    "figlet": "catalog:",
    "fs-extra": "catalog:",
    "picocolors": "catalog:",
    "preact": "catalog:",
    "preact-router": "catalog:",
    "rc": "catalog:",
    "unique-names-generator": "^4.7.1",
    "yargs": "^18.0.0",
    "zod": "catalog:"
  },
  "files": [
    "api/*",
    "lib/*",
    "public/**/*",
    "src/**/*",
    "LICENSE.md",
    "README.md",
    "service.ts"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "NODE_ENV=production BUN_ENV=development bun service.ts build",
    "clean": "rm -rf dist;rm -rf node_modules",
    "dev": "./scripts/dev.sh",
    "server": "NODE_ENV=production BUN_ENV=production bun service.ts start",
    "lint:css": "stylelint src/**/*.css",
    "lint:ts": "bun run lint:ts-format && bun run lint:ts-syntax && bun run lint:ts-types",
    "lint:ts-syntax": "oxlint --fix src/**/*.{ts,tsx} lib/**/*.ts api/**/*.ts service.ts --config ../../.oxlintrc.json",
    "lint:ts-format": "oxfmt --write **/*.{ts,tsx}",
    "lint:ts-types": "bun tsgo --noEmit",
    "test": "bun test"
  },
  "type": "module",
  "devDependencies": {
    "@types/fs-extra": "catalog:dev",
    "@types/node": "catalog:dev",
    "@types/rc": "catalog:dev",
    "@types/yargs": "catalog:dev",
    "bun-types": "catalog:dev",
    "oxfmt": "catalog:dev",
    "oxlint": "catalog:dev",
    "stylelint": "catalog:dev",
    "stylelint-order": "catalog:dev"
  },
  "exports": {
    ".": "./service.ts",
    "./codebrew": "./codebrew.tsx"
  }
}