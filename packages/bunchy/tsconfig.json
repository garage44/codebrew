{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "lib": ["DOM", "DOM.Iterable", "ES2023"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "*": ["./*"],
            "@/*": ["./*"],
            "@garage44/common/*": ["../common/*"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "ES2023",
        "types": ["bun", "node"]
    },
    "include": ["*.ts", "tests/**/*"]
}
