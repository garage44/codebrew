{
  "name": "@garage44/bunchy",
  "version": "2.1.12",
  "author": "Garage44",
  "main": "index.ts",
  "dependencies": {
    "@garage44/common": "workspace:*",
    "archy": "^1.0.0",
    "fs-extra": "^11.3.0",
    "lightningcss": "^1.25.0",
    "lodash.template": "^4.5.0",
    "node-notifier": "^10.0.1",
    "picocolors": "^1.1.1",
    "tildify": "^3.0.0",
    "ws": "^8.18.1"
  },
  "description": "Bunchy is a blazingly fast frontend development tool for Bun.",
