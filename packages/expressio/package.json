{
  "name": "@garage44/expressio",
  "description": "Expressio - I18n for humans, through AI...",
  "version": "2.1.20",
  "author": "Garage44",
  "main": "service.ts",
  "bin": {
    "expressio": "./service.ts"
  },
  "dependencies": {
    "@garage44/bunchy": "workspace:*",
    "@garage44/common": "workspace:*",
    "@preact/signals": "catalog:",
    "classnames": "catalog:",
    "deepsignal": "catalog:",
    "figlet": "catalog:",
    "fs-extra": "catalog:",
    "html-entities": "^2.5.3",
    "i18next": "catalog:",
    "picocolors": "catalog:",
    "preact": "catalog:",
    "preact-router": "catalog:",
    "rc": "catalog:",
    "yargs": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/fs-extra": "catalog:dev",
    "@types/node": "catalog:dev",
    "@types/rc": "catalog:dev",
    "@types/yargs": "catalog:dev",
    "bun-types": "catalog:dev",
    "oxfmt": "catalog:dev",
    "oxlint": "catalog:dev",
    "stylelint": "catalog:dev",
    "stylelint-order": "catalog:dev"
  },
  "exports": {
    ".": "./index.ts","./codebrew":"./codebrew.tsx",
    "./lib/i18n": "./lib/i18n.ts",
    "./src/lib/state": "./src/lib/state.ts",
    "./src/types": "./src/types.ts"
  },
  "files": [
    "api/*",
    "index.ts",
    "lib/*",
    "public/**/*",
    "LICENSE.md",
    "README.md",
    "service.ts"
  ],
  "license": "AGPL",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "NODE_ENV=production BUN_ENV=development bun service.ts build",
    "clean": "rm -rf dist;rm -rf node_modules",
    "dev": "NODE_ENV=development BUN_ENV=development bun run --watch service.ts start",
    "server": "NODE_ENV=production BUN_ENV=production bun service.ts start",
    "lint:css": "stylelint src/**/*.css",
    "lint:ts": "bun run lint:ts-style && bun run lint:ts-syntax && bun run lint:ts-types",
    "lint:ts-syntax": "oxlint --fix src/**/*.{ts,tsx} lib/**/*.ts api/**/*.ts index.ts service.ts --config ../../.oxlintrc.json",
    "lint:ts-style": "oxfmt --write **/*.{ts,tsx}",
    "lint:ts-types": "bun tsgo --noEmit",
    "test": "bun test"
  },
  "type": "module"
}
