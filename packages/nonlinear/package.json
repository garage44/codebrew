{
  "name": "@garage44/nonlinear",
  "description": "Nonlinear - AI-Powered Automated Project Management",
  "version": "0.1.0",
  "author": "Garage44",
  "main": "service.ts",
  "bin": {
    "nonlinear": "./service.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@garage44/bunchy": "workspace:*",
    "@garage44/common": "workspace:*",
    "@preact/signals": "catalog:",
    "@xenova/transformers": "^2.17.2",
    "classnames": "catalog:",
    "deepsignal": "catalog:",
    "figlet": "catalog:",
    "fs-extra": "catalog:",
    "i18next": "catalog:",
    "marked": "^17.0.0",
    "mermaid": "^11.12.1",
    "picocolors": "catalog:",
    "preact": "catalog:",
    "preact-router": "catalog:",
    "rc": "catalog:",
    "sqlite-vec": "^0.1.7-alpha.2",
    "yargs": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "catalog:dev",
    "@types/rc": "^1.2.4",
    "@types/yargs": "catalog:dev",
    "bun-types": "catalog:dev",
    "oxfmt": "catalog:dev",
    "oxlint": "catalog:dev",
    "stylelint": "catalog:dev",
    "stylelint-order": "catalog:dev"
  },
  "exports": {
    ".": "./index.ts",
    "./codebrew": "./codebrew.tsx",
    "./lib/database": "./lib/database.ts"
  },
  "files": [
    "api/*",
    "index.ts",
    "lib/*",
    "public/**/*",
    "LICENSE.md",
    "README.md",
    "service.ts"
  ],
  "license": "AGPL",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "NODE_ENV=production BUN_ENV=development bun service.ts build",
    "clean": "rm -rf dist;rm -rf node_modules",
    "dev": "NODE_ENV=development BUN_ENV=development bun run --watch service.ts start",
    "server": "NODE_ENV=production BUN_ENV=production bun service.ts start",
    "lint:css": "stylelint src/**/*.css",
    "lint:ts": "bun run lint:ts-format && bun run lint:ts-syntax && bun run lint:ts-types",
    "lint:ts-syntax": "oxlint --fix src/**/*.{ts,tsx} lib/**/*.ts api/**/*.ts index.ts service.ts --config ../../.oxlintrc.json",
    "lint:ts-format": "oxfmt --write **/*.{ts,tsx}",
    "lint:ts-types": "bun tsgo --noEmit",
    "test": "bun test"
  },
  "type": "module"
}