{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "*": ["./*"],
      "@/*": ["./src/*", "../common/*"],
      "@garage44/common/*": ["../common/*"],
      "@garage44/expressio/codebrew": ["./lib/plugin-stubs.d.ts"],
      "@garage44/nonlinear/codebrew": ["./lib/plugin-stubs.d.ts"],
      "@garage44/pyrite/codebrew": ["./lib/plugin-stubs.d.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2023",
    "types": ["bun", "node"]
  },
  "include": ["src/**/*", "lib/**/*", "api/**/*", "*.ts", "*.tsx"],
  "exclude": ["../common/**/*", "../bunchy/**/*"]
}
