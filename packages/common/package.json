{
  "name": "@garage44/common",
  "version": "1.3.12",
  "description": "Component library for Garage44 projects",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "LICENSE.md",
    "README.md",
    "app.ts",
    "assets/**",
    "css/**",
    "components/**",
    "components.ts",
    "fonts/**",
    "lib/**",
    "service.ts",
    "tsconfig.json",
    "types.ts"
  ],
  "scripts": {
    "clean": "rm -rf dist;rm -rf node_modules",
    "lint:css": "stylelint components/**/*.css",
    "lint:ts": "bun run lint:ts-syntax && bun run lint:ts-style && bun run lint:ts-types",
    "lint:ts-syntax": "oxlint components/**/*.{ts,tsx} lib/**/*.ts app.ts service.ts components.ts types.ts tests/**/*.ts --config ../../.oxlintrc.json",
    "lint:ts-style": "oxfmt --write **/*.{ts,tsx}",
    "lint:ts-types": "bun tsgo --noEmit",
    "test": "bun test"
  },
  "type": "module",
  "author": "Garage44",
  "license": "MIT",
  "browser": {
    "./lib/logger.ts": "./lib/logger.browser.ts"
  },
  "dependencies": {
    "@preact/signals": "catalog:",
    "classnames": "catalog:",
    "deepsignal": "catalog:",
    "fs-extra": "catalog:",
    "figlet": "catalog:",
    "i18next": "catalog:",
    "path-to-regexp": "catalog:",
    "picocolors": "catalog:",
    "preact": "catalog:",
    "preact-router": "catalog:",
    "preact-transitioning": "^1.5.2",
    "tippy.js": "catalog:",
    "yargs": "catalog:"
  }
}
