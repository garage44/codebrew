{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "lib": ["DOM", "DOM.Iterable", "ES2023"],
        "module": "ES2022",
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "*": ["./*"],
            "@/*": ["./*"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "ES2023",
        "types": ["bun", "node"]
    },
    "include": ["components/**/*", "lib/**/*", "tests/**/*", "*.ts"]
}
